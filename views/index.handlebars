{{!-- Custom/favorites container for user saved drinks cocktails--}}
{{!-- This will populate using the models and DB --}}
<div id="main py-5 bg-light">
  <div class="container">
    {{!-- when loading index page pushes msg here from htmlroutes--}}
    <h1>{{msg}}</h1>
    <div class="row">
      {{#each cocktails}}
        <div class="col-md-3" data-id="{{this.id}}">
          <div class="drink-card card mb-4 shadow-sm" data-pic="{{this.pic}}" data-id="{{this.id}}" data-name="{{this.name}}" data-category="{{this.category}}" data-glass="{{this.glass}}" data-instructions="{{this.instructions}}" data-ingredients="{{this.ing}}">
                  <img src="{{this.pic}}" class="card-img-top thumbnail" width="100%" height="300" preserveAspectRatio="xMidYMid slice" focusable="false"  aria-label="{{this.name}}"><title>{{this.name}}</title><rect width="100%" height="100%" fill="#55595c"></rect></img>
              <div class="card-body">
                <p class="drinkName card-text">{{this.name}}</p>
      {{!-- need to figure out how to capture liked drink --}}
                <i class="star far fa-star"></i>
              </div>
            </div>
          </div>
      {{/each}}
    </div>
  </div>
</div>
{{!-- End of custom/favorites container for user saved drinks cocktails --}}

